<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowsBackground</item>
        <item name="android:textColor">@color/lightColor</item>
        <item name="android:textSize">17dp</item>
        <item name="android:itemBackground">@color/colorPrimaryDark</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FirstMenuButton" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/main_act_button</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#90ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">right|center</item>
        <item name="android:paddingRight">50dp</item>

        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="NewGameV">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
    </style>
    <style name="CheckTopTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="SettingsNumPicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/lightColor</item>
        <item name="android:textColorSecondary">@color/lightColor</item>
    </style>


</resources>
